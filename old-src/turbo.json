{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env",
    "NEXT_PUBLIC_API_BASE_URL",
    "NEXTAUTH_SECRET",
    "NEXT_PUBLIC_API_URL",
    "NEXTAUTH_CLIENT_ID"
  ],
  "globalEnv": [
    "NEXT_PUBLIC_API_BASE_URL",
    "NEXTAUTH_SECRET",
    "NEXT_PUBLIC_API_URL",
    "NEXTAUTH_CLIENT_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXTAUTH_SECRET",
        "NEXT_PUBLIC_API_URL",
        "NEXTAUTH_CLIENT_ID"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {},
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
